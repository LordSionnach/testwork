			<grant type="Racial Trait" id="ID_RACIAL_TRAIT_KITSUNEDIVINITY" />
		</rules>
  </element>
  
	<element name="Kitsune Divinty" type="Racial Trait" source="Sionnach's Mind" id="ID_RACIAL_TRAIT_KITSUNEDIVINITY">
